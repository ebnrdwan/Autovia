<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.autovia.AccountSessions.RegisterActivity">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <com.example.android.autovia.CustomViews.MyTextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="test"
            android:textColor="#4c565f"
            android:textSize="29dp" />

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorhint">

            <com.example.android.autovia.CustomViews.MyEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:background="#0000"
                android:drawableRight="@drawable/user"
                android:drawablePadding="12dp"
                android:gravity="left"
                android:hint="@string/name"
                android:maxLength="25"
                android:padding="12dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16dp" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:background="#59d58d" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/studentemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorhint">

            <com.example.android.autovia.CustomViews.MyEditText
                android:id="@+id/emailInputStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:background="#0000"
                android:drawableRight="@drawable/mail"
                android:drawablePadding="12dp"
                android:gravity="left"
                android:hint="@string/email"
                android:maxLength="25"
                android:padding="12dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16dp" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:background="#59d58d" />


        <android.support.design.widget.TextInputLayout
        android:id="@+id/studentpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorhint">


        <com.example.android.autovia.CustomViews.MyEditText

            android:id="@+id/passwordinputstudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:background="#0000"
            android:drawableRight="@drawable/pass"
            android:drawablePadding="12dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorPrimary"
            android:textSize="16dp"
            />


        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:background="#59d58d" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorhint">


            <com.example.android.autovia.CustomViews.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:background="#0000"
                android:drawableRight="@drawable/pass"
                android:drawablePadding="12dp"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16dp" />


        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:background="#59d58d" />
        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/stremember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_weight="2"
                android:buttonTint="@color/colorPrimary"
                android:checked="false"
                android:text="@string/remember_me"
                android:textColor="@color/colorPrimary"
                android:textSize="11dp" />

            <com.example.android.autovia.CustomViews.MyTextView
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/forgotpass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.3"
                android:text="@string/forgot_password"
                android:textColor="@color/colorPrimary"
                android:textSize="11dp" />


        </LinearLayout>


        <com.example.android.autovia.CustomViews.MyTextView
            android:id="@+id/signin1"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rect1"
            android:clickable="true"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/register"
            android:textColor="#fff"
            android:textSize="16dp" />


        <com.example.android.autovia.CustomViews.MyTextView
            android:id="@+id/orrigest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/acc"
            android:gravity="center"
            android:layout_margin="8dp"
            android:lines="2"
            android:foreground="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:text="@string/or_register"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</RelativeLayout>
